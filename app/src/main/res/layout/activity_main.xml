<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tw.edu.au.csie.hellotoast.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast Message"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_toast" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_toast_message"
        android:layout_below="@+id/tv_toast"
        android:layout_alignParentStart="true"
        android:text="Hello World" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_toast_message"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="TOP/LEFT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_top_left"
                android:layout_weight="1" />

            <Button
                android:text="TOP/CENTER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_top_center"
                android:layout_weight="1" />

            <Button
                android:text="TOP/RIGHT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_top_right"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="MIDDLE/LEFT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_middle_left"
                android:layout_weight="1" />

            <Button
                android:text="MIDDLE/CENTER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_middle_center"
                android:layout_weight="1" />

            <Button
                android:text="MIDDLE/RIGHT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_middle_right"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="BOTTOM/LEFT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_bottom_left"
                android:layout_weight="1" />

            <Button
                android:text="BOTTOM/CENTER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_bottom_center"
                android:layout_weight="1" />

            <Button
                android:text="BOTTOM/RIGHT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_bottom_right"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableLayout"
        android:orientation="horizontal">

        <RadioButton
            android:text="Buildin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_buildin"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:text="Custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_custom"
            android:layout_weight="1" />
    </RadioGroup>
</RelativeLayout>
